# ACIP Dashboard Environment Configuration

# Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/acip_db
DATABASE_URL_SYNC=postgresql://postgres:postgres@localhost:5432/acip_db

# AI Provider (choose 'gemini' or 'openai')
AI_PROVIDER=gemini

# API Keys (provide at least one)
GEMINI_API_KEY=your_gemini_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# Application Settings
DEBUG=true
ACIP_DEADLINE_DAYS=15
AUTO_APPROVE_LOW_RISK=true

# File Storage
DOCUMENTS_DIR=documents
AUDIT_LOGS_DIR=audit_logs
